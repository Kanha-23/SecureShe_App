<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/hori"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pp"
            android:contentDescription="butoon"/>

        <TextView
            android:id="@+id/image_z1"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:paddingBottom="5dp"
            android:paddingTop="14dp"
            android:scaleType="fitCenter"
            android:text="PROFILE"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/action_profile"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#f88787"
            android:textColor="@color/white"
            android:text="Logout" />

    </LinearLayout>


    <!-- ScrollView to enable scrolling for card views -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/hori"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top CardView layout -->
        <LinearLayout
            android:id="@+id/top_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- CardView 1 -->
            <TextView
                android:id="@+id/t"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="NEED"
                android:textColor="#8f8c8c"
                android:textSize="26sp"
                android:gravity="center"
                android:scaleType="fitCenter"
                 />
            <TextView
                android:id="@+id/t2"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="EMERGENCY"
                android:textColor="#f88787"
                android:textSize="36sp"
                android:gravity="center"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/t3"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="HELP?"
                android:textColor="#8f8c8c"
                android:textSize="26sp"
                android:gravity="center"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/t4"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Press the bellow button in case of an emergency"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:scaleType="fitCenter"
                />

                <ImageView
                    android:id="@+id/image_x"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/helllp" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="330dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:text="Emergency contacts "
                android:textColor="#f88787"
                android:textSize="16sp"
                android:gravity="center"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/t6"
                android:layout_width="330dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:text="will be notified with your current location"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:scaleType="fitCenter"
                />


